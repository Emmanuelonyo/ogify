{
  "name": "ogify",
  "version": "1.0.0",
  "description": "Production-ready OpenGraph metadata extraction and image generation API",
  "type": "module",
  "scripts": {
    "dev": "bun run --hot src/index.ts",
    "start": "prisma generate && prisma db push && bun run src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target bun",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "test": "bun test",
    "db:seed": "bun run prisma/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "^5.9.0",
    "@resvg/resvg-js": "^2.6.0",
    "cheerio": "^1.0.0-rc.12",
    "hono": "^4.0.0",
    "jose": "^5.2.0",
    "ioredis": "^5.3.2",
    "nanoid": "^5.0.5",
    "satori": "^0.10.11",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "prisma": "^5.9.0",
    "typescript": "^5.3.3"
  }
}
